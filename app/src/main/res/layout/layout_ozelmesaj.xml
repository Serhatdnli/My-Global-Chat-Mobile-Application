<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ozlmsjbg"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:navigationIcon="@color/transparant"
        android:background="@color/gri">


        <ImageButton
            android:id="@+id/geritusu"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@drawable/backbutton"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_marginStart="25dp"
            android:id="@+id/profilresim"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/ppp"
            android:layout_marginLeft="25dp"/>



        <TextView
            android:id="@+id/kullaniciadiozelmesaj"
            android:layout_marginStart="10dp"
            android:text="Serhat Denli"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_above="@+id/relati"
        android:layout_below="@+id/tolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/relati"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        >

        <EditText
            android:id="@+id/mesajgirialani"
            android:layout_marginBottom="2dp"
            android:padding="8dp"
            android:layout_marginEnd="50sp"
            android:layout_marginStart="5dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="mesajınızı girin"
            android:layout_centerVertical="true"
            android:background="@drawable/mesajcerceve"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="50sp" />



        <ImageView
            android:id="@+id/gonderbtn"
            android:layout_marginEnd="10dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/messagesendbutton"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true" />


    </RelativeLayout>

</RelativeLayout>